{
    "name": "@wecco/i18n",
    "version": "0.1.0",
    "description": "A simple, minimalistic i18n framework",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://halimath@bitbucket.org/wecco/i18n.git"
    },
    "homepage": "https://wecco.bitbucket.io/",
    "devDependencies": {
        "typescript": "^4.2.4",
        "mocha": "^8.3.2",
        "@types/mocha": "^8.2.2",
        "@types/node": "^14.14.41",
        "ts-node": "^9.1.1",
        "iko": "^0.6.0",
        "sinon": "^10.0.0",
        "@types/sinon": "^10.0.0",
        "nyc": "^15.1.0",
        "rollup": "^2.45.2",
        "rollup-plugin-typescript2": "^0.30.0",
        "rollup-plugin-commonjs": "^10.1.0",
        "tslint": "^6.1.3"
    },
    "main": "dist/wecco-i18n.umd.js",
    "module": "dist/wecco-i18n.es5.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "rollup -c",
        "watch": "rollup -c -w",
        "test": "mocha --require ts-node/register test/**/*.test.ts",
        "coverage": "nyc mocha --require ts-node/register test/**/*.test.ts",
        "lint": "tslint -p tslint.json"
    },
    "nyc": {
        "include": [
            "src/**/*.ts"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "text-summary",
            "html"
        ],
        "sourceMap": true,
        "instrument": true
    }
}
